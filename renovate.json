{
  "extends": [
    "config:base"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "docker": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchDatasources": [
        "go"
      ],
      "groupName": "go packages"
    },
    {
      "matchPaths": [
        ".github/workflows/**"
      ],
      "groupName": "github actions"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "\\.github\\/workflows\\/.*"
      ],
      "matchStrings": [
        "# renovate: golangci-lint\\s+version: (?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "depNameTemplate": "github-tags",
      "datasourceTemplate": "golangci/golangci-lint"
    }
  ]
}
