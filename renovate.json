{
  "extends": [
    "config:base"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "docker": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchDatasources": [
        "go"
      ],
      "groupName": "go packages"
    },
    {
      "matchPaths": [
        ".github/workflows/**"
      ],
      "groupName": "github actions"
    }
  ]
}
